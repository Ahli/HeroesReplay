<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
  </PropertyGroup>

    <PropertyGroup>
        <OpenApiClientNameSpace>HeroesReplay.Core.Replays.HotsApi</OpenApiClientNameSpace>
        <OpenApiClientClassName>HotsApiClient</OpenApiClientClassName>
        <OpenApiClientFileName>Replays/$(OpenApiClientClassName).g.cs</OpenApiClientFileName>
        <OpenApiResponseClassName>HotsApiResponse</OpenApiResponseClassName>
        <OpenApiWrapResponse>true</OpenApiWrapResponse>
        <OpenApiDocumentUrl>http://hotsapi.net/spec/hotsapi-1.0.yaml</OpenApiDocumentUrl>
    </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="AWSSDK.Core" Version="3.5.0-beta" />
    <PackageReference Include="AWSSDK.S3" Version="3.5.0-beta" />
    <PackageReference Include="Heroes.ReplayParser" Version="1.2.10" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="3.1.1" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="3.1.1" />
    <PackageReference Include="Microsoft.Windows.SDK.Contracts" Version="10.0.19041.1-preview.vb-release" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
    <PackageReference Include="Polly" Version="7.2.0" />
    <PackageReference Include="System.Drawing.Common" Version="4.7.0" />
    <PackageReference Include="System.Security.Principal.Windows" Version="4.7.0" />
    <PackageReference Include="NSwag.MSBuild" Version="13.2.2">
        <PrivateAssets>all</PrivateAssets>
        <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
  </ItemGroup>

    <Target Name="Download" BeforeTargets="BeforeBuild">
        <DownloadFile DestinationFileName="spec.yaml" DestinationFolder="$(MSBuildProjectDirectory)" Retries="3" SourceUrl="$(OpenApiDocumentUrl)" />
    </Target>

    <Target Name="Generate" BeforeTargets="BeforeBuild" DependsOnTargets="Download">
        <Exec Command="$(NSwagExe_Core31) openapi2csclient /input:$(MSBuildProjectDirectory)\spec.yaml /wrapresponses:$(OpenApiWrapResponse) /responseclass:$(OpenApiResponseClassName) /classname:$(OpenApiClientClassName) /namespace:$(OpenApiClientNameSpace) /usebaseurl:true /output:$(OpenApiClientFileName)" />
        <Delete Files="$(MSBuildProjectDirectory)\spec.yaml" />
    </Target>




</Project>
